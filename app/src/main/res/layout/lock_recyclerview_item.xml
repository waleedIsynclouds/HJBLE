<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="108dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lock_list_root"
            android:layout_width="match_parent"
            android:layout_height="108dp">

            <TextView
                android:id="@+id/textViewMac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="aabbccdd"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_firmver"
                app:layout_constraintStart_toEndOf="@+id/tvDeviceType"
                app:layout_constraintStart_toStartOf="@+id/textView_firmver"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView_firmver"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="hard："
                app:layout_constraintBottom_toTopOf="@+id/textView_hardver"
                app:layout_constraintStart_toEndOf="@+id/tvDeviceType"
                app:layout_constraintStart_toStartOf="@+id/textView_hardver"
                app:layout_constraintTop_toBottomOf="@+id/textViewMac" />

            <TextView
                android:id="@+id/textView_hardver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="soft"
                app:layout_constraintBottom_toTopOf="@+id/divider4"
                app:layout_constraintStart_toEndOf="@+id/tvDeviceType"
                app:layout_constraintTop_toBottomOf="@+id/textView_firmver" />

            <TextView
                android:id="@+id/tvDeviceType"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="1"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider4"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="操作"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

